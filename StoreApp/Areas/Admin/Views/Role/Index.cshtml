@model IEnumerable<IdentityRole>

<div class="text-center my-5 border-bottom">
    <div class="display-6">Roles</div>
</div>

<div class="text-center">
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table table-striped table-hover align-center">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <div class="btn-group">
                                <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                   asp-action="Update" asp-route-id="@role.Id">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                   asp-action="Delete" asp-route-id="@role.Id">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


